@model QeAColors.Models.Question

@{
    ViewBag.Title = "Pergunta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.2.min.js" type="text/javascript"></script>
<script src="http://ajax.aspnetcdn.com/ajax/modernizr/modernizr-2.0.6-development-only.js" type="text/javascript"></script>

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-10">
            <audio id="audio" autoplay controls>
                <source src="@Url.Content("~/Audio/"+Model.File)" type="audio/mp3">
                Seu navegador não suporta o elemento de áudio.
            </audio>
            @using (Html.BeginForm())
            {
                @Html.DisplayTextFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-6">
                    @using (Html.BeginForm("Next", "Game", FormMethod.Post))
                    {
                        @Html.Hidden("awnser", "1")
                        <input type="submit" value="" class="btn btn-primary" style="width:300px;height:150px;" />
                    }
                </div>
                <div class="col-md-6">
                    @using (Html.BeginForm("Next", "Game", FormMethod.Post))
                    {
                        @Html.Hidden("awnser", "2")
                        <input type="submit" value="" id="2" class="btn btn-danger" style="width:300px;height:150px;" />
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @using (Html.BeginForm("Next", "Game", FormMethod.Post))
                    {
                        @Html.Hidden("awnser", "3")
                        <input type="submit" value="" id="3" class="btn btn-success" style="width:300px;height:150px;" />
                    }
                </div>
                <div class="col-md-6">

                    @using (Html.BeginForm("Next", "Game", FormMethod.Post))
                    {
                        @Html.Hidden("awnser", "4")
                        <input type="submit" value="" id="4" class="btn btn-warning" style="width:300px;height:150px;" />
                    }
                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
